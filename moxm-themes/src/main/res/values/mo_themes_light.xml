<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application light theme. -->
    <style name="Theme.Moxm.Light" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/mo_primary_material_dark</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/mo_primary_material_dark</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/mo_accent_material_dark</item>

        <item name="actionBarSize">@dimen/mo_action_bar_default_height_material</item>

        <!-- 去除ActionBar下面阴影 -->
        <item name="android:windowContentOverlay">@null</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight & colorSwitchThumbNormal. -->

    </style>

    <style name="Theme.Moxm.Light.NoActionBar" parent="Theme.Moxm.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>